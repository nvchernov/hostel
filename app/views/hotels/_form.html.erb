<%= form_for(@hotel) do |f| %>
  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
      <% @hotel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Название:</label><br>
    <%= f.text_field :name, {:class => 'form-control' } %>
  </div>
  <div class="form-group">
    <label>Регион:</label><br>
    <%= select_tag :hotel_region_id,options_for_select(@regions.collect { |p| [p.name,p.id] },@hotel.city.nil? ? 0 : @hotel.city.region_id),{:class => 'form-control' }%>
  </div>
  <div class="form-group">
    <label>Город:</label><br>
    <%= f.select :city_id, @cities.collect { |p| [p.name,p.id] }, {}, {:class => 'form-control' } %>
  </div>
  <div class="form-group">
    <input type="submit" value="Ок" class="btn btn-primary"/>
  </div>
<% end %>
