<p id="notice"><%= notice %></p>

<h1>Список регионов</h1>

<table class="table table-striped">
    <tr>
      <th>Название</th>
      <th>Стрнана</th>
      <th>Действия</th>
    </tr>
  <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.country.nil? ? '-' : region.country.name  %></td>
        <td>
          <%= link_to 'Показать', region %>
          <%= link_to 'Редактировать', edit_region_path(region) %>
          <%= link_to 'Удалить', region, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>

</table>

<br>

<%= link_to '+ Создать регион', new_region_path, {:class => 'btn btn-success'} %>
