<p id="notice"><%= notice %></p>

<h1>Список стран</h1>

<table class="table table-striped">
    <tr>
        <th>Название</th>
        <th>Действия</th>
    <% @countries.each do |country| %>
    <tr>
        <td><%= country.name %></td>
        <td>
        <%= link_to 'Показать', country %>
        <%= link_to 'Редактировать', edit_country_path(country) %>
        <%= link_to 'Удалить', country, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
    </tr>
    <% end %>
</table>

<br>

<%= link_to '+ Создать страну', new_country_path, {:class => 'btn btn-success'} %>
